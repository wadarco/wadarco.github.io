{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 90
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedImports": "error",
        "useHookAtTopLevel": "error",
        "noUnusedVariables": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": { "functions": ["clsx"] }
        }
      },
      "suspicious": { "useAwait": "error", "noConsole": "warn" }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "parser": { "cssModules": true }
  }
}
